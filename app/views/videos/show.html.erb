<h1><%= @video.title %></h1>
<p>Rating: <%= @video.rand_num %></p>

<iframe width="420" height="315" src="//www.youtube.com/embed/<%= @video.youtube_id %>" frameborder="0" allowfullscreen></iframe>

<p><%= @video.description %></p>

<p><%= link_to 'home', root_path %></p>

<p><%= link_to 'next', video_path(@video.next_id(@video.id+1)) %></p>
<p><%= link_to 'previous', video_path(@video.prev_id(@video.id-1)) %></p>
